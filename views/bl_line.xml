                <field name='TypeArticle'/>
                <field name='Designation'/>
                <field name='PxUnitaire'/>
                <field name='Remise'/>
                <field name='PxUnitaireNet'/>
                <field name='Qte'/>
                <field name='TotalHT'/>
                <field name='DatePeriodeDebut'/>
                <field name='DatePeriodeFin'/>
            </tree>
        </field>
    </record>

    <record id="action_bl_ligne" model="ir.actions.act_window">
        <field name="name">BL Ligne</field>
