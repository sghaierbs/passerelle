                            <field name='IdTiers'/>
                            <field name='NumPiece'/>
                            <field name='TypePiece'/>
                            <field name='DatePiece'/>
                            <field name='IdContrat'/>
                            <field name='NumContrat'/>
                            <field name='AnneeContrat'/>
